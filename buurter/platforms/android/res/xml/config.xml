<?xml version='1.0' encoding='utf-8'?>
<widget id="edu.fontys.media.handyfriendly" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <preference name="loglevel" value="DEBUG" />
    <feature name="Whitelist">
        <param name="android-package" value="org.apache.cordova.whitelist.WhitelistPlugin" />
        <param name="onload" value="true" />
    </feature>
    <feature name="Accelerometer">
        <param name="android-package" value="org.apache.cordova.devicemotion.AccelListener" />
    </feature>
    <feature name="Compass">
        <param name="android-package" value="org.apache.cordova.deviceorientation.CompassListener" />
    </feature>
    <allow-intent href="market:*" />
    <name>Handy Friendly</name>
    <description>
        A wheelchair user friendly toilet finder app.
    </description>
    <author email="info@marijnstuyfzand.nl" href="http://marijnstuyfzand.nl">
        Marijn Stuyfzand
    </author>
    <content src="index.html" />
    <access origin="*" />
    <access origin="*.google.*" />
    <access origin="http://*.google.com" />
    <access origin="http://maps.google.com" />
    <access origin="https://google.com" />
    <access origin="http://google.com" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
</widget>
